<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Hotel_ProgressBarLoadingDataFragment">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminateTint">@color/progress_bar</item>
    </style>

    <style name="Hotel_ActionBarTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/action_bar_title_size</item>
        <item name="android:layout_marginStart">@dimen/action_bar_title_margin_start_end</item>
        <item name="android:layout_marginEnd">@dimen/action_bar_title_margin_start_end</item>
    </style>

    <style name="Hotel_RoundButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/round_button_margins</item>
        <item name="android:textSize">@dimen/round_button_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/round_corners_button</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="Hotel_TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/hotel_fragment_margin_top_elements</item>
        <item name="hintTextColor">@color/black</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="android:colorControlActivated">@android:color/transparent</item>
    </style>

    <style name="Hotel_TextInputEditText" parent="ThemeOverlay.Material3.AutoCompleteTextView.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="Hotel_FrameLayoutPhotos">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/hotel_fragment_view_pager_height</item>
        <item name="android:layout_marginStart">@dimen/hotel_fragment_margin_start_end_elements</item>
        <item name="android:layout_marginEnd">@dimen/hotel_fragment_margin_start_end_elements</item>
    </style>

    <style name="Hotel_PageIndicatorPhotos">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/photo_page_indicator_padding</item>
        <item name="android:background">@drawable/page_indicator_backgroud</item>
        <item name="android:layout_gravity">center_horizontal|bottom</item>
        <item name="android:layout_marginBottom">@dimen/photo_page_indicator_margin_bottom</item>
    </style>

    <style name="Hotel_TextViewPrice">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/hotel_fragment_common_data_min_price_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/hotel_fragment_margin_top_elements</item>
    </style>

    <style name="Hotel_TextViewPriceDescription">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/hotel_fragment_common_data_price_for_it_text_size</item>
        <item name="android:textColor">@color/text_subtitle</item>
        <item name="android:layout_marginBottom">@dimen/hotel_fragment_common_data_price_for_it_margin_bottom</item>
        <item name="android:layout_marginStart">@dimen/hotel_fragment_common_data_price_for_it_margin_start</item>
    </style>

    <style name="Hotel_TextViewBookingDataItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="Hotel_GuidelineVerticalBookingDataItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="layout_constraintGuide_percent">0.4</item>
    </style>
</resources>