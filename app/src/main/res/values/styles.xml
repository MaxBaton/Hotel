<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Hotel_ProgressBarLoadingDataFragment">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminateTint">@color/progress_bar</item>
    </style>

    <style name="Hotel_ActionBarTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Hotel_RoundButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/round_button_margins</item>
        <item name="android:textSize">@dimen/round_button_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/round_corners_button</item>
    </style>
</resources>