<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/round_corners_fragment_item">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_booking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/booking_data_item"
        tools:itemCount="5"
        android:layout_marginStart="@dimen/hotel_fragment_margin_start_end_elements"
        android:layout_marginEnd="@dimen/hotel_fragment_margin_start_end_elements"
        android:layout_marginTop="@dimen/hotel_fragment_margin_top_elements"
        android:layout_marginBottom="@dimen/hotel_fragment_margin_top_elements"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        />

</androidx.constraintlayout.widget.ConstraintLayout>