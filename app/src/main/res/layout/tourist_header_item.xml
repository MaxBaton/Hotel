<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/fragment_background"
    android:id="@+id/layout">

    <ImageView
        android:id="@+id/image_view_open"
        android:layout_width="@dimen/arrow_icon_size"
        android:layout_height="@dimen/arrow_icon_size"
        android:src="@drawable/icon_star"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_marginEnd="@dimen/hotel_fragment_margin_start_end_elements"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/text_view_tourist_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        tools:text="Первый турист"
        android:textAlignment="textStart"
        android:layout_marginStart="@dimen/hotel_fragment_margin_start_end_elements"
        app:layout_constraintEnd_toStartOf="@id/image_view_open"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/image_view_open"
        app:layout_constraintBottom_toBottomOf="@id/image_view_open"
        />

</androidx.constraintlayout.widget.ConstraintLayout>