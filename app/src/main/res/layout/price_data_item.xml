<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/booking_fragment_data_item_padding_top_bottom"
    android:paddingBottom="@dimen/booking_fragment_data_item_padding_top_bottom">

    <TextView
        android:id="@+id/text_view_title"
        style="@style/Hotel_TextViewBookingDataItem"
        tools:text="Title"
        android:textColor="@color/text_subtitle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline_center"
        />

    <TextView
        android:id="@+id/text_view_data"
        style="@style/Hotel_TextViewBookingDataItem"
        tools:text="Data"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/guideline_center"
        app:layout_constraintTop_toTopOf="@id/text_view_title"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_center"
        style="@style/Hotel_GuidelineVerticalBookingDataItem"/>

</androidx.constraintlayout.widget.ConstraintLayout>